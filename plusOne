class Solution {
    public int[] plusOne(int[] digits) {
        bool carry = true;
        for (int i = digits.length-1; carry; i--) {
            digits[i] += 1;
            if (digits[i] > 9) {
                digits[i] = 0;
                if (i==0) {
                    int[] newMath = new int[digits.length + 1];
                    newMath[0] = 1;
                    return newMath;
                }
            }
            else 
                return digits;
        }
    }
}
