class Solution {
    public int integerReplacement(int n) {
        int turnCount = 0;
        int nUp;
        int nDown;
        while (n != 1) {
            if (n%2 == 0) {
                n /= 2;
            }
            else{
                if ((n+1)%4==0)
                    n++;
                else
                    n--;
            }
            turnCount++;
        }
        return turnCount;
    }
}
